# Database Configuration
DATABASE_URL=mysql://username:password@host:3306/database_name

# Session Configuration
SESSION_SECRET=your_super_secret_key_here_change_in_production
SESSION_COOKIE_NAME=pc_session
SESSION_TTL_MS=604800000
BCRYPT_SALT_ROUNDS=12

# Server Configuration
PORT=4000
NODE_ENV=production

# CORS Configuration (comma-separated origins)
CORS_ORIGIN=http://localhost:5173,https://www.sanocandle.com

# Application Base URL (frontend URL)
APP_BASE_URL=https://www.sanocandle.com

# Iyzipay (Iyzico) Payment Gateway
IYZICO_API_KEY=your_iyzico_api_key
IYZICO_SECRET_KEY=your_iyzico_secret_key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# SMTP Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
