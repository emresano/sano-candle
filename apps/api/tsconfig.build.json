{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "dist"
  },
  "include": [
    "src/server.ts",
    "src/routes/**/*",
    "src/services/**/*",
    "src/db/**/*",
    "src/utils/**/*",
    "src/types/**/*"
  ],
  "exclude": [
    "src/scripts",
    "src/scripts/**/*",
    "src/**/*.test.ts",
    "dist"
  ]
}